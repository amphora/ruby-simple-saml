    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "RSpec current line with rdbg",
            "request": "launch",
            "useBundler": true,
            "script": "/Users/nkosik/.rbenv/versions/3.1.4/bin/rspec",
            "args": [
                "${file}:${lineNumber}"
            ],
    "askParameters": true

        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        },
        {
    "type": "rdbg",
    "name": "Debug Print Args",
    "request": "launch",
    "script": "${workspaceFolder}/print_args.rb",
    "args": ["${file}"],
    "askParameters": true
}
    ]
}